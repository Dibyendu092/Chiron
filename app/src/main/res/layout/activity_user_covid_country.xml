<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBack"
    android:orientation="vertical"
    tools:context=".user.UserCovidCountryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_arrow_back"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="Country"
            android:fontFamily="@font/ubuntu"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/textColor1"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <Spinner
            android:id="@+id/spinnerCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"/>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/ubuntu"
            android:text="Search"
            android:textAlignment="center"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/_15ssp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/GlobalStat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Country's Statistics"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_22ssp"  />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Cases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Case: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/Casesno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Todaycases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today's Case:"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/TodayCasesno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/Death"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Death: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/Deathno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TodayDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today's Death: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/TodayDeathNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Recovery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recovery: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/RecoveryNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:layout_weight="1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Active: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/Activeno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:layout_weight="1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Critical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Critical: "
                    android:textColor="@color/textColor1"
                    android:fontFamily="@font/ubuntu_light"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/CriticalNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:layout_weight="1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18sdp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>