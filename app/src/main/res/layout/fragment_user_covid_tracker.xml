<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserCovidTrackerFragment"
    android:background="@color/mainBack"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/GlobalStat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Global Statistics"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_22ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Cases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Case: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/Casesno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Todaycases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today's Case:"
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/TodayCasesno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/Death"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Death: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/Deathno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TodayDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Today's Death: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/TodayDeathNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Recovery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recovery: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/RecoveryNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:layout_weight="1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Active: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/Activeno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:layout_weight="1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Critical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Critical: "
                    android:textColor="@color/textColor1"
                    android:fontFamily="@font/ubuntu_light"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/CriticalNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:layout_weight="1"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18sdp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/AffectedCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Affected Country: "
                    android:fontFamily="@font/ubuntu_light"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/AffectedCountryNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/yellow_rounded_corner"
                    android:textColor="@color/textColor1"
                    android:textSize="@dimen/_18ssp"
                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country Tracker"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/yellow_fill_rounded"
                    android:id="@+id/countryTraker"
                    android:textSize="@dimen/_18ssp"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_22sdp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>